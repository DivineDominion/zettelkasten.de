<li class="allposts__post minimalpost post--minimal">
  <span class="minimalpost__title"><%= link_to(@post[:title], @post.path) %></span>
  <span class="minimalpost__author <%= 'hidden' unless @show_author == true %>"><%= Post::author_tag_for(@post) %></span>
  <span class="minimalpost__time">(<%= Date::MONTHNAMES[month] %>)</span>
</li>
